<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFB95F"
    android:orientation="vertical"
    tools:context="com.example.kongwenyao.educationalgame.GameOverActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/gameover_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextAppearance="@style/Toolbar.Title"
            android:background="@android:color/transparent"
            app:elevation="0dp"/>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_over_label"
        android:textSize="35sp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textAppearance="@style/Toolbar.Title"
        android:textColor="@color/colorDarkGray"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/score_label"
        android:textSize="24sp"
        android:textAppearance="@style/Toolbar.Title"
        android:textColor="@color/colorDarkGray"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/score_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="120sp"
        android:text="5"
        android:textColor="@color/colorDarkGray"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/name_EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_your_name_label"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:textColor="@color/colorDarkGray" android:inputType="textCapCharacters" />

    <com.andexert.library.RippleView
        android:id="@+id/enter_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:rv_rippleDuration="100"
        app:rv_centered="true">

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="@string/enter_button_label"
            android:textSize="18sp"
            android:textColor="@color/colorBackground"
            android:background="@drawable/button_background"
            android:contentDescription="@string/settings"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"/>

    </com.andexert.library.RippleView>

</LinearLayout>